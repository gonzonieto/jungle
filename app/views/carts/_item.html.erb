<%= tag.tr class:'text-center', style:'vertical-align:middle' do %>
  <%= tag.td image_tag product.image.tiny.url %>
  <%= tag.td tag.p product.name, class:'fs-2 m-0' %>
  <%= tag.td humanized_money_with_symbol(product.price).concat(' ea.') %>
  <%= tag.td do %>
    <%= tag.div class:'btn-group' do %>
      <%= button_to ' - ', remove_item_cart_path(product_id: product.id), class:'btn btn-outline-dark', style:'border-radius:35% 0% 0% 15%' %>
      <%= tag.span quantity, class:'badge bg-success fs-5', style:'border-radius:0px' %>
      <%= button_to '+', add_item_cart_path(product_id: product.id), class:'btn btn-outline-dark', style:'border-radius:0% 15% 35% 0%' %>
    <% end %>
  <% end %>
  <%= tag.td humanized_money_with_symbol(product.price * quantity), class:'fs-4' %>
<% end %>