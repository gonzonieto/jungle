<% new_product_button = link_to '+ New Product', [:new, :admin, :product], class:'btn btn-outline-success my-3' %>

<%= tag.section class:'admin-products-index' do %>
  <%= tag.h1 'Admin Dashboard', class:'display-4 text-center my-4' %>
  <%= tag.h2 'Products', class:'display-6 text-center my-4' %>

  <%= tag.div do %>
    <%= new_product_button %>
    <%= tag.table class:'table table-bordered' do %>
      <%= tag.thead tag.tr, class:'text-center' do %>
        <%= tag.th('Product', colspan: '2') +
            tag.th('Category') +
            tag.th('Price') +
            tag.th('Inventory') +
            tag.th %>
      <% end %>
      <%= tag.tbody render @products %>
    <% end %>
    <%= new_product_button %>
  <% end %>
<% end %>