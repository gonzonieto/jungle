<%= tag.section class: 'admin-products-new' do %>
  <%= tag.h1 'Admin Â» New Product', class: 'page-header my-4' %>
  <%= link_to 'All Products', [:admin, :products], class: 'btn btn-info well' %>

  <%= tag.div class: 'col-sm-6 col-sm-offset-1' do %>
    <%= form_for [:admin, @product] do |form| %>
      <% if form.object.errors.any? %>
        <%= tag.div class: 'alert alert-danger' do %>
          <%= tag.b 'The following errors prevented saving:' %>
          <%= tag.ul do %>
            <% form.object.errors.full_messages.each do |error| %>
              <%= tag.li error %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= tag.div form.label(:name) +
                  form.text_field(:name, class: 'form-control'),
                  class: 'form-group' %>

      <%= tag.div form.label(:description) +
                  form.text_area(:description, class: 'form-control'),
                  class: 'form-group' %>

      <%= tag.div form.label(:category) +
                  form.select(:category_id, options_from_collection_for_select(Category.all.order(:name), :id, :name),
                  { include_blank: true }, class: 'form-control'),
                  class: 'form-group' %>

      <%= tag.div form.label(:quantity) +
                  form.number_field(:quantity, class: 'form-control'),
                  class: 'form-group' %>

      <%= tag.div form.label(:price) +
                  form.text_field(:price, class: 'form-control'),
                  class: 'form-group' %>

      <%= tag.div form.label(:image) +
                  form.file_field(:image),
                  class: 'form-group' %>

      <%= form.submit 'Create Product', class: 'btn btn-primary' %>
    <% end %>
  <% end %>
<% end %>