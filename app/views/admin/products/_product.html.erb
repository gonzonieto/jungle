<%= tag.tr style:'vertical-align:middle' do %>
  <%= tag.td image_tag product.image.tiny.url %>
  <%= tag.td tag.h4(product.name) + tag.br + tag.p(truncate product.description, length: 190, separator: ' ') %>
  <%= tag.td product.category.name.singularize, class: 'text-center' %>
  <%= tag.td humanized_money_with_symbol(product.price), class: 'text-center' %>
  <%= tag.td product.quantity, class: 'text-center' %>
  <%= tag.td link_to fa_icon('trash'), [:admin, product], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>