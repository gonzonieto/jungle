<%= tag.article do %>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <%= tag.h2 tag.span(product.name) + tag.span(humanized_money_with_symbol product.price) %>
  <% end%>

  <%= tag.div do %>
    <% no_stock = product.quantity.zero? %>
    <% if no_stock %>
      <%= button_tag "Sold Out", class: 'btn soldout', type: 'button' %>
    <% end %>

    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn',
    disabled: no_stock, method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %> 
    <% end %>
  <% end %>
<% end %>